<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Maui.App"
             x:Class="Maui.App.FlyoutPageDemo">
    
    <!--Zone de menu volant Flyout Menu-->
    <FlyoutPage.Flyout>
        <local:FlyoutMenuPage x:Name="flyoutPage"/>
    </FlyoutPage.Flyout>
    
    <!--Zone des details Flyout details-->
    <FlyoutPage.Detail>
        <NavigationPage>
            <x:Arguments>
                <local:ContactsPage />
            </x:Arguments>
        </NavigationPage>
    </FlyoutPage.Detail>
</FlyoutPage>